= link_to 'New Category', new_category_path, class: 'btn btn-outline btn-primary pull-right new-instance'
%h1 Listing Categories

.panel.panel-primary
  .panel-heading
    .row
      .col-xs-6
        = search_form_for(@search, class: 'form search') do |f|
          .sidebar-search
            .input-group.custom-search-form
              = f.search_field :name_cont, class: 'form-control', placeholder: 'Serach...'
              %span.input-group-btn
                %button.btn.btn-default{:type => "submit"}
                  %i.fa.fa-search

  .panel-body
    .row
      .col-xs-12
        %table.table.table-striped.table-bordered.table-hover
          %tr
            %th Name
            %th Parent
            %th.actions-column

          - @categories.each do |category|
            %tr
              %td= category.name
              %td= category.parent.try(:name)
              %td= render 'actions', category: category


