= form_for @category, class: 'form' do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :parent
    = f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.try(:name)}" }, {}, {class: 'form-control'}
  .actions.form-group
    = f.submit 'Save', class: 'btn btn-primary'
