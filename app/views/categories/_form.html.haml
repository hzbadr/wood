= form_for @category do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :parent
    = f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.try(:name)}" }
  .actions
    = f.submit 'Save'
