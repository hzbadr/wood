%fieldset
  .form-group
    = f.label :stock_id, 'Product'
    = f.select :stock_id, options_from_collection_for_select(Stock.all, :id, :name, f.object.stock_id), {include_blank: true}, {class: 'form-control'}
  .form-group
    = f.label :quantity
    = f.text_field :quantity, class: 'form-control'
  .form-group
    = f.hidden_field :_destroy
    = link_to "Remove", '#', class: "remove_fields"