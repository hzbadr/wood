%p
  %b Number:
  = @order.number
%p
  %b Total:
  = @order.total
%p
  %b State:
  = @order.state
%p
  %b Customer:
  = @order.customer.full_name
%p
  %b Completed at:
  = @order.completed_at
%p
  %b Created by:
  = @order.created_by.full_name

%h5 Line Items
- @order.line_items.each do |l|
  %p
    %b Product:
    = l.variant.name



= link_to 'Edit', edit_order_path(@order)
