= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :total
    = f.text_field :total
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :customer
    = f.text_field :customer
  .field
    = f.label :completed_at
    = f.datetime_select :completed_at
  .field
    = f.label :created_by
    = f.text_field :created_by
  .actions
    = f.submit 'Save'
