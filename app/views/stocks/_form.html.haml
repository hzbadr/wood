= form_for @stock do |f|
  - if @stock.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stock.errors.count, "error")} prohibited this stock from being saved:"
      %ul
        - @stock.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :variant
    = f.text_field :variant
  .field
    = f.label :quantity
    = f.text_field :quantity
  .field
    = f.label :date
    = f.date_select :date
  .actions
    = f.submit 'Save'
