= form_for @stock, class: 'form' do |f|
  - if @stock.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stock.errors.count, "error")} prohibited this stock from being saved:"
      %ul
        - @stock.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :variant
    = f.text_field :variant, class: 'form-control'
  .form-group
    = f.label :quantity
    = f.text_field :quantity, class: 'form-control'
  .form-group
    = f.label :date
    = f.date_select :date, class: 'form-control'
  .actions
    = f.submit 'Save'
