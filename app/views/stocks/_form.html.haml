= form_for @stock, class: 'form' do |f|
  - if @stock.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stock.errors.count, "error")} prohibited this stock from being saved:"
      %ul
        - @stock.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :product_id
    = f.select :product_id, options_from_collection_for_select(Product.all, :id, :name, @stock.product_id), {include_blank: true},class: 'form-control'
  .form-group
    = f.label :quantity
    = f.text_field :quantity, class: 'form-control'
  .form-group
    = f.label :date
    %br
    = f.date_field :date, class: 'form-control'
  .actions.form-group
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', stocks_path, class: 'btn btn-outline btn-default cancel'
