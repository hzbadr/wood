= form_for @currency_exchange do |f|
  - if @currency_exchange.errors.any?
    #error_explanation
      %h2= "#{pluralize(@currency_exchange.errors.count, "error")} prohibited this currency_exchange from being saved:"
      %ul
        - @currency_exchange.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :safe
    = f.text_field :safe
  .field
    = f.label :source
    = f.text_field :source
  .field
    = f.label :source_amount
    = f.text_field :source_amount
  .field
    = f.label :destination
    = f.text_field :destination
  .field
    = f.label :destination_amount
    = f.text_field :destination_amount
  .field
    = f.label :exchange_rate
    = f.text_field :exchange_rate
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
