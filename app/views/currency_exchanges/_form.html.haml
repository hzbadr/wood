= form_for @currency_exchange do |f|
  - if @currency_exchange.errors.any?
    #error_explanation
      %h2= "#{pluralize(@currency_exchange.errors.count, "error")} prohibited this currency_exchange from being saved:"
      %ul
        - @currency_exchange.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :safe
    = f.text_field :safe, class: 'form-control'
  .form-group
    = f.label :source
    = f.text_field :source, class: 'form-control'
  .form-group
    = f.label :source_amount
    = f.text_field :source_amount, class: 'form-control'
  .form-group
    = f.label :destination
    = f.text_field :destination, class: 'form-control'
  .form-group
    = f.label :destination_amount
    = f.text_field :destination_amount, class: 'form-control'
  .form-group
    = f.label :exchange_rate
    = f.text_field :exchange_rate, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'
  .actions.form-group
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', currencies_path, class: 'btn btn-outline btn-warning cancel'
