%h1 
  Listing warehouses
  = link_to 'New Warehouse', new_warehouse_path, class: 'btn btn-outline btn-primary pull-right new-instance'

.panel.panel-primary
  .panel-heading
    .row
      .col-xs-6
        = search_form_for(@search, class: 'form search') do |f|
          .sidebar-search
            .input-group.custom-search-form
              = f.search_field :name_cont, class: 'form-control', placeholder: 'Serach...'
              %span.input-group-btn
                %button.btn.btn-default{:type => "submit"}
                  %i.fa.fa-search

  .panel-body
    .row
      .col-xs-12
        %table.table.table-striped.table-bordered.table-hover
          %tr
            %th Name
            %th Address
            %th Phone
            %th Size
            %th Filled
            %th

          - @warehouses.each do |warehouse|
            %tr
              %td= warehouse.name
              %td= warehouse.address
              %td= warehouse.phone
              %td= warehouse.size
              %td= number_to_percentage(warehouse.stock_size_percentage, precision: 2)
              %td= render 'actions', warehouse: warehouse


