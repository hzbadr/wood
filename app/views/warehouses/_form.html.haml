= form_for @warehouse do |f|
  - if @warehouse.errors.any?
    #error_explanation
      %h2= "#{pluralize(@warehouse.errors.count, "error")} prohibited this warehouse from being saved:"
      %ul
        - @warehouse.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_area :address
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :size
    = f.text_field :size
  .actions
    = f.submit 'Save'
