= form_for @product, class: 'form' do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :category_id
    = f.select :category_id, nested_set_options(Category) {|i| "#{'&nbsp;&nbsp;' * i.level * 2} #{i.try(:name)}".html_safe }, {include_blank: true}, {class: 'form-control'}
  .form-group
    = f.label :weight
    = f.text_field :weight, class: 'form-control'
  .form-group
    = f.label :width
    = f.text_field :width, class: 'form-control'
  .form-group
    = f.label :height
    = f.text_field :height, class: 'form-control'
  .form-group
    = f.label :depth
    = f.text_field :depth, class: 'form-control'
  .form-group
    = f.label :cost_price
    = f.text_field :cost_price, class: 'form-control'
  .form-group
    = f.label :price
    = f.text_field :price, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', products_path, class: 'btn btn-outline btn-default cancel'
