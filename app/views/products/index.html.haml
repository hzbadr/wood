%h1 Listing Variants
.panel.panel-primary
  .panel-heading
    .row
      .col-xs-6
        = search_form_for(@search, class: 'form search') do |f|
          .sidebar-search
            .input-group.custom-search-form
              = f.search_field :category_name_cont, class: 'form-control', placeholder: 'Serach...'
              %span.input-group-btn
                %button.btn.btn-default{:type => "submit"}
                  %i.fa.fa-search

  .panel-body
    .row
      .col-xs-12
        %table.table.table-striped.table-bordered.table-hover.data-table
          %tr
            %th Weight
            %th Width
            %th Height
            %th Depth
            %th Product
            %th Cost price
            %th Price
            %th.actions-column

          - @products.each do |product|
            %tr
              %td= product.weight
              %td= product.width
              %td= product.height
              %td= product.depth
              %td= product.category.name
              %td= product.cost_price
              %td= product.price
              %td= render 'actions', product: product

= link_to 'New Variant', new_product_path
