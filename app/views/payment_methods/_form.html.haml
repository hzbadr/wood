= form_for @payment_method do |f|
  - if @payment_method.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment_method.errors.count, "error")} prohibited this payment_method from being saved:"
      %ul
        - @payment_method.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
