%h1 Listing payments

.panel.panel-primary
  .panel-heading
    .row
      .col-xs-6
        = search_form_for(@search, class: 'form search') do |f|
          .sidebar-search
            .input-group.custom-search-form
              = f.search_field :name_cont, class: 'form-control', placeholder: 'Serach...'
              %span.input-group-btn
                %button.btn.btn-default{:type => "submit"}
                  %i.fa.fa-search

  .panel-body
    .row
      .col-xs-12
        %table.table.table-striped.table-bordered.table-hover
          %tr
            %th Amount
            %th Order
            %th Customer
            %th State
            %th Payment method
            %th
            %th
            %th

          - @payments.each do |payment|
            %tr
              %td= payment.amount
              %td= payment.order
              %td= payment.customer
              %td= payment.state
              %td= payment.payment_method
              %td= link_to 'Show', payment
              %td= link_to 'Edit', edit_payment_path(payment)
              %td= link_to 'Destroy', payment, :method => :delete, :data => { :confirm => 'Are you sure?' }


= link_to 'New Payment', new_payment_path
