= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :order
    = f.text_field :order
  .field
    = f.label :customer
    = f.text_field :customer
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :payment_method
    = f.text_field :payment_method
  .actions
    = f.submit 'Save'
