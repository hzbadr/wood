= form_for @bank do |f|
  - if @bank.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bank.errors.count, "error")} prohibited this bank from being saved:"
      %ul
        - @bank.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :account_number
    = f.text_field :account_number, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
