%h1 Listing Suppliers
.panel.panel-primary
  .panel-heading
    .row
      .col-xs-6
        = search_form_for(@search, class: 'form search') do |f|
          .sidebar-search
            .input-group.custom-search-form
              = f.search_field :full_name_cont, class: 'form-control', placeholder: 'Serach...'
              %span.input-group-btn
                %button.btn.btn-default{:type => "submit"}
                  %i.fa.fa-search

  .panel-body
    .row
      .col-xs-12
        %table.table.table-striped.table-bordered.table-hover.data-table
          %tr
            %th Name
            %th email
            %th phone
            %th
            %th
            %th

          - @suppliers.each do |supplier|
            %tr
              %td= supplier.full_name
              %td= supplier.email
              %td= supplier.phone
              %td= link_to 'Show', supplier
              %td= link_to 'Edit', edit_supplier_path(supplier)
              %td= link_to 'Destroy', supplier, :method => :delete, :data => { :confirm => 'Are you sure?' }

= link_to 'New Supplier', new_supplier_path
