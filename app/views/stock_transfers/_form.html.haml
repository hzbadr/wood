= form_for @stock_transfer do |f|
  - if @stock_transfer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stock_transfer.errors.count, "error")} prohibited this stock_transfer from being saved:"
      %ul
        - @stock_transfer.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :source_id
    = f.select :source_id, options_from_collection_for_select(Supplier.all, :id, :full_name, @stock_transfer.source_id), {include_blank: true}, {class: 'form-control'}
  .form-group
    = f.label :product_id
    = f.select :product_id, options_from_collection_for_select(Product.all, :id, :name, @stock_transfer.product_id), {include_blank: true}, {class: 'form-control'}
  .form-group
    = f.label :warehouse_id
    = f.select :warehouse_id, options_from_collection_for_select(Warehouse.all, :id, :name, @stock_transfer.warehouse_id), {include_blank: true}, {class: 'form-control'}
  .form-group
    = f.label :quantity
    = f.number_field :quantity, class: 'form-control'
  .form-group
    = f.label :date
    = f.date_field :date, class: 'form-control'
  .actions.form-group
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', stock_transfers_path, class: 'btn btn-outline btn-default cancel'
