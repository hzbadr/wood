%h1 Listing Stock Transfers
.panel.panel-primary
  .panel-heading
    .row
      .col-xs-12
        = search_form_for(@search, class: 'form search') do |f|
          .sidebar-search
            .input-group.custom-search-form
              .row
                .col-xs-4
                  .form-group
                    = f.label :supplier_id
                    = f.select :source_id_eq, options_from_collection_for_select(Supplier.all, :id, :full_name), {}, class: 'form-control'
                .col-xs-3
                  .form-group
                    = f.label :date, 'Start Date'
                    = f.date_field :date_gteq, class: 'form-control'
                .col-xs-3
                  .form-group
                    = f.label :date, 'End Date'
                    = f.date_field :date_lteq, class: 'form-control'
                .col-xs-2
                  .form-group
                    %button.btn.btn-default{type: "submit", style: "margin-top:19px"}
                      %i.fa.fa-search
                        Search

  .panel-body
    .row
      .col-xs-12
        %table.table.table-striped.table-bordered.table-hover
          %tr
            %th Source
            %th Variant
            %th Quantity
            %th Date
            %th.actions-column

          - @stock_transfers.each do |stock_transfer|
            %tr
              %td= stock_transfer.source.full_name
              %td= stock_transfer.variant.name
              %td= stock_transfer.quantity
              %td= stock_transfer.date
              %td= render 'actions', stock_transfer: stock_transfer


= link_to 'New Stock transfer', new_stock_transfer_path
