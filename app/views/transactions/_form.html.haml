= form_for [@source, @transaction] do |f|
  - if @transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - @transaction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :source_id
    = f.text_field :source_id
  .field
    = f.label :destination_type
    = f.text_field :destination_type
  .field
    = f.label :destination_id
    = f.text_field :destination_id
  .field
    = f.label :date
    = f.date_select :date
  .actions
    = f.submit 'Save'
