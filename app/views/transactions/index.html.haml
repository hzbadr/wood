  .panel-body
    .row
      .col-xs-12
        %table.table.table-striped.table-bordered.table-hover
          %tr
            %th Amount
            %th Source
            %th Destination
            %th Currency
            %th Date
            %th

          - @transactions.each do |transaction|
            %tr
              %td= transaction.amount
              %td= transaction.source.name
              %td= transaction.destination.name
              %td= transaction.currency.name
              %td= transaction.date
              %td= render 'actions', transaction: transaction

